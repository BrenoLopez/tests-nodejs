{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "experimentalDecorators": true,
    "rootDir": "./",
    "baseUrl": "./", 
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"],
      "@core/*":["./src/core/*"],
      "@infra/*":["./src/infra/*"],
      "@presentation/*":["./src/presentation/*"]
    },                          
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules","dist"]
}
